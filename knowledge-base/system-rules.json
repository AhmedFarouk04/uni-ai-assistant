{
  "platform": "University Management System",
  "language": "ar",
  "credit_hours_limits": [
    {
      "condition": "GPA >= 3",
      "max_hours": 21,
      "status": "Honors"
    },
    {
      "condition": "2 <= GPA < 3",
      "max_hours": 18,
      "status": "Normal"
    },
    {
      "condition": "1 <= GPA < 2",
      "max_hours": 15,
      "status": "Academic Probation"
    },
    {
      "condition": "GPA < 1",
      "max_hours": 12,
      "status": "Academic Warning"
    }
  ],
  "attendance_policy": {
    "qr_required": true,
    "appeal_time_limit_hours": 24
  },
  "registration_policy": {
    "registration_edit_allowed_before_close": true,
    "payment_required": true
  }
}
