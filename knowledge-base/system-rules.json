{
  "platform": "University Management System",
  "language": "ar",
  "rules_scope": "Only explicitly stated rules are valid.",
  "academic_status_policy": {
    "status_only": true,
    "additional_actions_defined": false
  },
  "credit_hours_limits": [
    {
      "condition": "GPA >= 3",
      "max_hours": 21,
      "status": "Honors",
      "description": "حالة تفوق أكاديمي"
    },
    {
      "condition": "2 <= GPA < 3",
      "max_hours": 18,
      "status": "Normal",
      "description": "حالة أكاديمية طبيعية"
    },
    {
      "condition": "1 <= GPA < 2",
      "max_hours": 15,
      "status": "Academic Probation",
      "description": "الطالب تحت الملاحظة الأكاديمية"
    },
    {
      "condition": "GPA < 1",
      "max_hours": 12,
      "status": "Academic Warning",
      "description": "تحذير أكاديمي"
    }
  ],
  "attendance_policy": {
    "qr_required": true,
    "appeal_time_limit_hours": 24
  },
  "registration_policy": {
    "registration_edit_allowed_before_close": true,
    "payment_required": true
  }
}
